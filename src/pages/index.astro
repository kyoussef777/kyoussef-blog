---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import HeadshotImage from '../assets/headshot.jpeg';
import LinkedInBg from '../assets/linkedin-bg.png';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} image={LinkedInBg} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<div class="hero-image">
					<img src={HeadshotImage.src} alt="Kamal Youssef" class="headshot" />
				</div>
				<h1>Kamal Youssef</h1>
				<h2>Platform Security Engineer</h2>
				<p class="hero-description">
					Building secure, scalable solutions in cloud and automation. Currently pursuing M.S. Computer Science at Georgia Institute of Technology.
				</p>
			</section>

			<section class="about-preview">
				<h3>About Me</h3>
				<p>
					I'm a Platform Security Engineer and Software Engineering Lead with expertise in cloud architecture, DevSecOps, and automation. 
					I lead teams to deliver strategic IT projects while focusing on security, efficiency, and modern development practices while picking the right tools for the job.
				</p>
				<p>
					<strong>Current Focus:</strong> GenAI integration, Cloud Modernization, and enterprise security solutions.
				</p>
			</section>

			<section class="skills">
				<h3>Technical Skills</h3>
				<div class="skills-grid">
					<div class="skill-category">
						<h4>Languages</h4>
						<p>Python, Javascript, Java, SQL, C#, Bash, PowerShell</p>
					</div>
					<div class="skill-category">
						<h4>Cloud & DevOps</h4>
						<p>AWS, Azure, Docker, Kubernetes, Terraform, Jenkins, Github Actions</p>
					</div>
					<div class="skill-category">
						<h4>Security</h4>
						<p>DevSecOps, Infrastructure as Code Scanning, Vulnerability Management</p>
					</div>
					<div class="skill-category">
						<h4>Development</h4>
						<p>React, Node.js, CI/CD, Machine Learning, TensorFlow, Next.JS</p>
					</div>
				</div>
			</section>

			<section class="cta">
				<h3>Explore</h3>
				<div class="cta-links">
					<a href="/about" class="cta-button">Learn More About Me</a>
					<a href="/blog" class="cta-button">Read My Blog</a>
					<a href="/projects" class="cta-button">View Projects</a>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
